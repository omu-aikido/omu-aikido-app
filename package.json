{
  "name": "record-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' vite",
    "check": "pnpm format && pnpm lint:fix && pnpm type-check && pnpm knip",
    "check:all": "pnpm check && pnpm audit && pnpm test",
    "build": "run-p type-check \"build-only {@}\" --",
    "prebuild": "pnpm run cf-typegen",
    "preview": "pnpm run build && wrangler dev",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "format": "oxfmt --write .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "deploy": "pnpm run build --minify && wrangler deploy --dry-run",
    "cf-typegen": "wrangler types",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.1",
    "@clerk/vue": "^1.17.7",
    "@headlessui/vue": "^1.7.23",
    "@hono/arktype-validator": "^2.0.1",
    "@hono/clerk-auth": "^3.0.3",
    "@libsql/client": "^0.15.15",
    "@tanstack/vue-query": "^5.92.5",
    "arktype": "^2.1.29",
    "date-fns": "^4.1.0",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "lucide-vue-next": "^0.562.0",
    "svix": "^1.84.1",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@clerk/types": "^4.101.10",
    "@cloudflare/vite-plugin": "^1.20.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "drizzle-kit": "^0.31.8",
    "happy-dom": "^20.1.0",
    "knip": "^5.80.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.38.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2",
    "wrangler": "^4.58.0"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.27.1"
    },
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "esbuild",
      "sharp",
      "vue-demi",
      "workerd"
    ]
  }
}
