{
  "name": "record-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "check": "pnpm build && tsc -b && pnpm db:check && wrangler deploy --dry-run",
    "deploy": "pnpm build && wrangler deploy --dry-run",
    "dev": "react-router dev",
    "predev": "pnpm docker:up",
    "prebuild": "react-router typegen && wrangler types",
    "precommit": "pnpm lint:fix && pnpm format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "preview": "react-router build && wrangler dev --port 4173",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "test": "vitest && playwright test",
    "test:e2e": "playwright test",
    "test:unit": "vitest --project unit",
    "test:integration": "vitest --project integration",
    "test:watch": "vitest --watch",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "postdocker:up": "pnpm db:migrate",
    "docker:db:reset": "docker-compose down && docker-compose up -d && pnpm db:migrate",
    "pretest:e2e": "pnpm docker:down && pnpm docker:up && pnpm db:migrate",
    "posttest:e2e": "pnpm docker:down",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@clerk/backend": "^2.27.0",
    "@clerk/react-router": "^2.3.4",
    "@hono/arktype-validator": "^2.0.1",
    "@hono/clerk-auth": "^3.0.3",
    "@libsql/client": "^0.15.15",
    "@logtape/logtape": "^1.2.2",
    "arktype": "^2.1.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.45.1",
    "embla-carousel-react": "^8.6.0",
    "hono": "^4.10.8",
    "input-otp": "^1.4.2",
    "isbot": "^5.1.32",
    "lucide-react": "^0.559.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-day-picker": "^9.12.0",
    "react-dom": "^19.2.3",
    "react-resizable-panels": "^3.0.6",
    "react-router": "^7.10.1",
    "react-router-dom": "^7.10.1",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.23",
    "@clerk/types": "^4.101.6",
    "@cloudflare/vite-plugin": "^1.17.1",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.10.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "wrangler": "^4.54.0"
  },
  "pnpm": {
    "overrides": {},
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "workerd"
    ],
    "executionEnv": {
      "nodeVersion": "24.8.0"
    }
  },
  "engines": {
    "node": ">=24.8"
  },
  "packageManager": "pnpm@10.24.0"
