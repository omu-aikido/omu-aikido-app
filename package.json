{
  "name": "record-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "check": "pnpm build && tsc -b && pnpm db:check && wrangler deploy --dry-run",
    "deploy": "pnpm build && wrangler deploy --dry-run",
    "dev": "react-router dev",
    "predev": "pnpm docker:up",
    "prebuild": "react-router typegen && wrangler types",
    "precommit": "pnpm lint:fix && pnpm format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "preview": "react-router build && wrangler dev --port 4173",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "test": "vitest && playwright test",
    "test:e2e": "playwright test",
    "test:unit": "vitest --project unit",
    "test:integration": "vitest --project integration",
    "test:watch": "vitest --watch",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "postdocker:up": "pnpm db:migrate",
    "docker:db:reset": "docker-compose down && docker-compose up -d && pnpm db:migrate",
    "pretest:e2e": "pnpm docker:down && pnpm docker:up && pnpm db:migrate",
    "posttest:e2e": "pnpm docker:down",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@clerk/react-router": "^2.3.0",
    "@libsql/client": "^0.15.15",
    "@logtape/logtape": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "input-otp": "^1.4.2",
    "isbot": "^5.1.32",
    "lucide-react": "^0.553.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.3",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.6",
    "react-router-dom": "^7.9.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.19",
    "@clerk/types": "^4.101.3",
    "@cloudflare/vite-plugin": "^1.15.3",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.9.6",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "drizzle-kit": "^0.31.7",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.3",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14",
