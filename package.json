{
  "name": "record-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "check": "pnpm build && tsc -b && pnpm db:check && wrangler deploy --dry-run",
    "deploy": "pnpm build && wrangler deploy --dry-run",
    "dev": "react-router dev",
    "prebuild": "react-router typegen",
    "precommit": "pnpm lint:fix && pnpm format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "preview": "react-router build && wrangler dev --port 4173",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "postdocker:up": "pnpm db:migrate",
    "docker:db:reset": "docker compose down && docker compose up -d && pnpm db:migrate",
    "pretest:e2e": "pnpm docker:down && pnpm docker:up && pnpm db:migrate",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@clerk/react-router": "^1.9.1",
    "@libsql/client": "^0.15.11",
    "@logtape/logtape": "^1.0.4",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "isbot": "^5.1.29",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.1",
    "react-router-dom": "^7.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@clerk/testing": "^1.11.0",
    "@clerk/types": "^4.78.0",
    "@cloudflare/vite-plugin": "^1.11.5",
    "@playwright/test": "^1.54.2",
    "@react-router/dev": "^7.8.1",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.30.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "packageManager": "pnpm@10.13.1"
}
