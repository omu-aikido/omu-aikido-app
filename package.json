{
  "name": "record-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "check": "pnpm build && tsc -b && pnpm db:check && wrangler deploy --dry-run",
    "deploy": "pnpm build && wrangler deploy --dry-run",
    "dev": "react-router dev",
    "prebuild": "react-router typegen",
    "precommit": "pnpm lint:fix && pnpm format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "preview": "react-router build && wrangler dev --port 4173",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "postdocker:up": "pnpm db:migrate",
    "docker:db:reset": "docker compose down && docker compose up -d && pnpm db:migrate"
  },
  "dependencies": {
    "@catppuccin/palette": "^1.7.1",
    "@clerk/react-router": "^1.7.0",
    "@clerk/types": "^4.67.0",
    "@libsql/client": "^0.15.9",
    "@logtape/logtape": "^1.0.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "isbot": "^5.1.27",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.3",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@clerk/testing": "^1.10.4",
    "@cloudflare/vite-plugin": "^1.0.12",
    "@playwright/test": "^1.54.1",
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^18.0.1",
    "prettier": "^3.5.3",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.0.5",
    "wrangler": "^4.24.3",
    "zod": "^4.0.5"
  }
}
