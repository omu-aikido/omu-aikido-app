{
  "name": "record-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build-only": "vite build",
    "build": "run-p type-check \"build-only {@}\" --",
    "cf-typegen": "wrangler types",
    "check:all": "pnpm check && pnpm audit && pnpm test",
    "check": "pnpm format && pnpm lint:fix && pnpm type-check && pnpm build-only && pnpm knip",
    "db:check": "drizzle-kit check",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "pnpm run build --minify && wrangler deploy --dry-run",
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' vite",
    "format": "oxfmt --write .",
    "knip:fix": "knip --fix",
    "knip": "knip",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --fix --cache",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:fix": "run-s lint:fix:*",
    "lint:fix:eslint": "eslint . --cache",
    "lint:fix:oxlint": "oxlint . -D correctness --ignore-path .gitignore",
    "prebuild": "pnpm run cf-typegen",
    "preview": "pnpm run build && wrangler dev",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "vue-tsc --build"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.3",
    "@clerk/vue": "^1.17.8",
    "@headlessui/vue": "^1.7.23",
    "@hono/arktype-validator": "^2.0.1",
    "@hono/clerk-auth": "^3.1.0",
    "@libsql/client": "^0.15.15",
    "@tanstack/vue-query": "^5.92.8",
    "arktype": "^2.1.29",
    "date-fns": "^4.1.0",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "lucide-vue-next": "^0.562.0",
    "svix": "^1.84.1",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.29",
    "@clerk/types": "^4.101.11",
    "@cloudflare/vite-plugin": "^1.21.0",
    "@iconify-json/material-symbols": "^1.2.53",
    "@playwright/test": "^1.57.0",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.10.9",
    "@unocss/reset": "^66.6.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "^1.39.0",
    "eslint-plugin-vue": "^10.7.0",
    "eslint-plugin-vue-scoped-css": "^2.12.0",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.1",
    "jiti": "^2.6.1",
    "knip": "^5.81.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "postcss": "^8.5.6",
    "postcss-value-parser": "^4.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "unocss": "^66.6.0",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.17",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.2",
    "wrangler": "^4.59.2"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.27.1",
      "undici": "^7.18.2"
    },
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "esbuild",
      "sharp",
      "vue-demi",
      "workerd"
    ]
  }
}
