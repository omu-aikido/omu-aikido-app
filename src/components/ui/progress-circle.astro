---
interface Props {
    title: string;
    inline?: string;
}

const { title } = Astro.props;
---

<div
    class="fixed top-0 left-0 w-full h-full bg-slate-400/30 dark:bg-slate-600/30 backdrop-blur-sm z-[1000] pointer-events-none"
>
    <div
        class="flex flex-col justify-items-center justify-center items-center h-full"
    >
        <h1
            class="text-2xl md:text-xl sm:text-lg text-[rgb(var(--sapphire))] mb-4"
        >
            {title}<span class="inline-block">
                <span class="inline-block animate-bounce">.</span><span
                    class="inline-block animate-bounce delay-200">.</span
                ><span class="inline-block animate-bounce delay-400">.</span>
            </span>
        </h1>

        <svg
            class="mr-3 -ml-1 size-5 animate-spin text-slate-800 dark:text-slate-100"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            ><circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"></circle><path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path></svg
        >
    </div>
</div>
