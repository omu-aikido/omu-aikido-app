<div class="ph-add-record">
    <form id="activity-form" class="activity-form" method="POST">
        <label for="date">
            日付
            <span style="color:rgb(var(--maroon))">*</span>
        </label>
        <input type="date" id="date" name="date" value=" " disabled />

        <label for="period">
            稽古時間
            <span style="color:rgb(var(--maroon))">*</span>
        </label>
        <input type="number" id="period" name="period" value="" disabled />
        <button type="submit" id="record-submit"
            ><span class="ph-text">&nbsp;</span></button
        >
    </form>

    <div class="recent-card">
        <h2 class="recent-card-title">
            <span class="ph-text">&nbsp;</span>
        </h2>
        <div class="recent-card-body">
            <span class="ph-text">&nbsp;</span>
            <span class="ph-text">&nbsp;</span>
            <span class="ph-text">&nbsp;</span>
        </div>
    </div>
</div>

<style>
    .activity-form {
        display: grid;
        grid-template-columns: 100px 1fr;
        gap: 1rem;
        align-items: center;
    }
    .activity-form button {
        grid-column: span 2;
    }
    .feedback-message {
        background-color: rgb(var(--accent));
        color: rgb(var(--text));
        padding: 0.5rem;
        border-radius: 0.25rem;
        margin-bottom: 1rem;
        text-align: center;
    }
    .hidden {
        display: none;
    }
    .recent-card {
        background-color: rgb(var(--surface1) / 0.8);
        border: 1px solid rgb(var(--overlay0) / 0.9);
        padding: 1rem;
        border-radius: 0.5rem;
        margin-top: 1rem;
    }
    .recent-card-title {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: rgb(var(--text));
    }
    .recent-card-body {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        color: rgb(var(--subtext0));
    }
    .recent-card-body > span {
        margin-right: 0.5rem;
    }
    h2.recent-card-title {
        margin-top: 0;
    }

    @media (max-width: 815px) {
        .recent-card-body {
            flex-direction: column;
        }
    }

    /* プレースホルダーテーブルのスタイル */
    .ph-text {
        display: inline-block;
        width: 100%;
        position: relative;
        overflow: hidden;
        height: 85%;
        background: linear-gradient(
            90deg,
            rgba(var(--overlay0) / 0.1) 0%,
            rgba(var(--overlay0) / 0.3) 50%,
            rgba(var(--overlay0) / 0.1) 100%
        );
        background-size: 200% 100%;
        animation: shimmering 2s infinite linear;
    }

    @keyframes shimmering {
        0% {
            background-position: 100% 0;
        }
        100% {
            background-position: -100% 0;
        }
    }
</style>
