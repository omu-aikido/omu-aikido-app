---
// import type { CollectionEntry } from "astro:content";

interface Props {
    title: string;
    id: string;
    desc: string;
}

const { title, id, desc } = Astro.props;
---

<a href={`${id}`}>
    <ul>
        <li>
            <h4 class="title">{title}</h4>
            <p>{desc}</p>
        </li>
    </ul>
</a>
<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    ul li {
        width: calc(50% - 1rem);
        padding: 1rem;
        background-color: rgb(var(--surface0));
        border-radius: 12px;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease;
    }
    ul li:hover {
        transform: translateY(-2px);
        box-shadow: 0 0px 0px 2px rgb(var(--sapphire) / 0.6);
    }
    ul li * {
        text-decoration: none;
        transition: color 0.2s ease;
    }
    ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
    }
    ul li a {
        display: block;
        margin-bottom: 0;
    }
    .title {
        margin: 0;
    }

    @media (max-width: 720px) {
        ul {
            gap: 0.5em;
        }
        ul li {
            width: 100%;
            text-align: center;
        }
        ul li:first-child {
            margin-bottom: 0;
        }
        ul li:first-child .title {
            font-size: 1.563em;
        }
    }
</style>
