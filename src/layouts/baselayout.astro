---
import "@/src/styles/global.css"
---

<html
  lang="ja"
  class="bg-slate-50 dark:bg-slate-900 text-slate-800 dark:text-slate-200 font-sans scroll-smooth select-none overflow-x-hidden max-w-full"
>
  <slot />
</html>

<style is:global>
  hr {
    display: block;
    margin-block: 1.5em;
    margin-inline: auto;
    height: 1px;
    border: none;
    background: linear-gradient(to right, transparent, var(--color-slate-400), transparent);
  }
  @media (prefers-color-scheme: dark) {
    hr {
      display: block;
      margin-block: 1.5em;
      margin-inline: auto;
      height: 1px;
      border: none;
      background: linear-gradient(to right, transparent, var(--color-slate-600), transparent);
    }
  }
</style>

<style is:global>
  .cl-cardBox {
    box-shadow: none;
  }

  @media (prefers-color-scheme: dark) {
    .cl-headerTitle {
      color: var(--color-slate-100);
    }
    .cl-headerSubtitle,
    .cl-formFieldLabel {
      color: var(--color-slate-300);
    }
    .cl-dividerText {
      color: var(--color-slate-400);
    }
    #identifier-field,
    .cl-socialButtons button,
    .cl-formButtonPrimary,
    .cl-menuButton,
    .cl-navbar,
    .cl-navbarMobileMenuRow,
    .cl-navbarMobileMenuButton,
    .cl-badge,
    .cl-navbar :where(h1, button, a) {
      background: var(--color-slate-700);
      color: var(--color-slate-200);
    }

    .cl-formButtonPrimary:hover {
      color: var(--color-slate-300);
      background: var(--color-slate-600);
    }

    .cl-profileSectionPrimaryButton {
      background: var(--color-slate-500);
    }
    .cl-button:hover,
    .cl-profileSectionPrimaryButton:hover {
      background: var(--color-slate-400);
    }
    .cl-card,
    .cl-pageScrollBox,
    .cl-pageScrollBox :where(h1, p, a, div),
    .cl-footer {
      color: var(--color-slate-300);
      background: var(--color-slate-800);
    }
    .cl-menuItem {
      border: none;
    }
  }
</style>
