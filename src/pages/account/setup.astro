---
import { default as Layout } from "@/src/layouts/layout.astro"
import ProfileSetupForm from "@/rr7/components/component/ProfileSetupForm"
---

<Layout title="プロフィール登録">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
      <h1 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-8">
        セットアップ
      </h1>
      <ProfileSetupForm userId={Astro.locals.auth().userId!} client:load />
    </div>
  </div>
</Layout>
