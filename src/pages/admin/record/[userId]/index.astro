---
import { default as Layout } from "@/src/layouts/auth-layout.astro";
import {
    getTrainings,
    getUserActivities,
} from "@/src/lib/query/admin/activity";
import { getUser } from "@/src/lib/query/admin/clerk";
import { getProfile } from "@/src/lib/query/profile";
import { translateGrade, timeForNextGrade } from "@/src/utils";

const { userId } = Astro.params;

if (!userId) {
    return Astro.redirect("/admin/record");
}

const userAccount = await getUser(userId);
const userProfile = await getProfile({ userId: userId });
if (!userAccount || userProfile instanceof Response) {
    return Astro.redirect("/admin/record");
}

const startParam = Astro.url.searchParams.get("start");
const endParam = Astro.url.searchParams.get("end");
// 追加: resetパラメータがあればクエリを削除してリダイレクト
if (Astro.url.searchParams.get("reset")) {
    return Astro.redirect(Astro.url.pathname);
}

const startValue = startParam ? new Date(startParam) : null;
const endValue = endParam ? new Date(endParam) : null;

const activities = (
    await getUserActivities({
        userId: userId,
        start: startValue,
        end: endValue,
    })
).sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());

const trainCount = parseInt(
    `${
        (
            await getTrainings({
                userId: userId,
            })
        )
            .map((record) => record.period)
            .reduce((a, b) => a + b, 0) / 1.5
    }`
);

const totalTrains = parseInt(
    `${
        (
            await getUserActivities({
                userId: userId,
                start: null,
                end: null,
            })
        )
            .map((record) => record.period)
            .reduce((a, b) => a + b, 0) / 1.5
    }`
);
---

<Layout title="一覧">
    <div
        class="min-h-screen bg-slate-50 dark:bg-slate-900 transition-colors duration-200"
    >
        <div class="container mx-auto px-4 py-6 max-w-6xl">
            <h4
                class="text-2xl font-bold text-slate-900 dark:text-slate-50 mb-4"
            >
                {userAccount.last_name}
                {userAccount.first_name}
                の稽古記録
            </h4>
            <!-- ヘッダー部分 -->
            <div
                class="mb-6 rounded-md bg-slate-100 dark:bg-slate-800/50 p-6 shadow-md"
            >
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4"
                >
                    <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                        <p
                            class="text-sm text-blue-600 dark:text-blue-400 font-medium"
                        >
                            現在の級段位
                        </p>
                        <p
                            class="text-lg font-bold text-blue-900 dark:text-blue-100"
                        >
                            {translateGrade(userProfile.grade)}
                        </p>
                    </div>

                    <div
                        class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg"
                    >
                        <p
                            class="text-sm text-green-600 dark:text-green-400 font-medium"
                        >
                            取得日
                        </p>
                        <p
                            class="text-lg font-bold text-green-900 dark:text-green-100"
                        >
                            {
                                new Date(
                                    userProfile.getGradeAt
                                ).toLocaleDateString("ja-JP")
                            }
                        </p>
                    </div>

                    <div
                        class="bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded-lg"
                    >
                        <p
                            class="text-sm text-yellow-600 dark:text-yellow-400 font-medium"
                        >
                            次の級段位まで
                        </p>
                        <p
                            class="text-lg font-bold text-yellow-900 dark:text-yellow-100"
                        >
                            {trainCount}/{timeForNextGrade(userProfile.grade)}回
                        </p>
                    </div>

                    <div
                        class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg"
                    >
                        <p
                            class="text-sm text-purple-600 dark:text-purple-400 font-medium"
                        >
                            累計稽古回数
                        </p>
                        <p
                            class="text-lg font-bold text-purple-900 dark:text-purple-100"
                        >
                            {totalTrains}回
                        </p>
                    </div>
                </div>
            </div>

            <!-- フィルター部分 -->
            <div
                class="bg-slate-50 dark:bg-slate-800 rounded-lg shadow-md mb-6 overflow-hidden"
            >
                <details class="group">
                    <summary
                        class="cursor-pointer p-4 bg-slate-50 dark:bg-slate-700 hover:bg-slate-100 dark:hover:bg-slate-600 transition-colors duration-200"
                    >
                        <span
                            class="text-lg font-medium text-slate-900 dark:text-slate-50"
                            >フィルター</span
                        >
                    </summary>

                    <div class="p-6">
                        <form id="filter-form" method="GET" class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label
                                        for="start"
                                        class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2"
                                    >
                                        開始日
                                    </label>
                                    <input
                                        type="date"
                                        id="start"
                                        name="start"
                                        value={startValue
                                            ? startValue
                                                  .toISOString()
                                                  .split("T")[0]
                                            : ""}
                                        class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-md bg-slate-50 dark:bg-slate-700 text-slate-900 dark:text-slate-50 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    />
                                </div>

                                <div>
                                    <label
                                        for="end"
                                        class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2"
                                    >
                                        終了日
                                    </label>
                                    <input
                                        type="date"
                                        id="end"
                                        name="end"
                                        value={endValue
                                            ? endValue
                                                  .toISOString()
                                                  .split("T")[0]
                                            : ""}
                                        class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-md bg-slate-50 dark:bg-slate-700 text-slate-900 dark:text-slate-50 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    />
                                </div>
                            </div>

                            <div class="flex flex-col sm:flex-row gap-3">
                                <button
                                    type="submit"
                                    name="reset"
                                    value="true"
                                    class="px-4 py-2 bg-slate-500 hover:bg-slate-600 text-slate-50 font-medium rounded-md transition-colors duration-200 focus:ring-2 focus:ring-slate-500 focus:ring-offset-2"
                                >
                                    リセット
                                </button>
                                <button
                                    type="submit"
                                    class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-slate-50 font-medium rounded-md transition-colors duration-200 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                                >
                                    フィルター
                                </button>
                            </div>
                        </form>
                    </div>
                </details>
            </div>

            <!-- テーブル部分 -->
            <div
                class="bg-slate-50 dark:bg-slate-800 rounded-lg shadow-md overflow-hidden"
            >
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-200 dark:bg-slate-00">
                            <tr>
                                <th
                                    class="px-2 py-3 text-center text-xs font-medium text-slate-500 dark:text-slate-300 uppercase tracking-wider"
                                >
                                    日付
                                </th>
                                <th
                                    class="px-2 py-3 text-center text-xs font-medium text-slate-500 dark:text-slate-300 uppercase tracking-wider"
                                >
                                    稽古時間
                                </th>
                                <th
                                    class="px-2 py-3 text-center text-xs font-medium text-slate-500 dark:text-slate-300 uppercase tracking-wider"
                                >
                                    編集日
                                </th>
                            </tr>
                        </thead>
                        <tbody
                            class="bg-slate-50 dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-700"
                        >
                            {
                                activities.length === 0 ? (
                                    <tr>
                                        <td
                                            colspan="3"
                                            class="px-6 py-8 text-center text-slate-500 dark:text-slate-400"
                                        >
                                            履歴はありません
                                        </td>
                                    </tr>
                                ) : (
                                    activities.map((activity) => (
                                        <tr class="hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors duration-150">
                                            <td class="px-2 py-4 slate-50space-nowrap text-sm text-center text-slate-900 dark:text-slate-100">
                                                {new Date(
                                                    activity.date
                                                ).toLocaleDateString("ja-JP")}
                                            </td>
                                            <td class="px-2 py-4 slate-50space-nowrap text-sm text-center text-slate-900 dark:text-slate-100">
                                                {activity.period}時間
                                            </td>
                                            <td class="px-2 py-4 slate-50space-nowrap text-sm text-center text-slate-500 dark:text-slate-400">
                                                {activity.updatedAt &&
                                                    new Date(
                                                        activity.updatedAt
                                                    ).toLocaleString("ja-JP")}
                                            </td>
                                        </tr>
                                    ))
                                )
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</Layout>
